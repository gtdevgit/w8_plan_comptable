<Application
    x:Class="PlanComptableW8.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:PlanComptableW8.ViewModele">
    <Application.Resources>
        <ResourceDictionary>
            <x:String x:Key="AppName">Plan comptable</x:String>
            <vm:PlanComptableClass x:Key="ViewModeleKey"></vm:PlanComptableClass>
            <ResourceDictionary.MergedDictionaries>
                <!-- 
                    Styles définissant l'apparence globale de la plateforme
                    Requis par les modèles de projets et les modèles d'éléments Visual Studio
                 -->              
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
                <ResourceDictionary Source="View/Styles.xaml"/>                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
